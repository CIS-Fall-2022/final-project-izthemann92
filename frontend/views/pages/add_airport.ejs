<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body class="container">

    <header>
        <%- include('../partials/header'); %>
    </header>

    <main>
        <div class="container">
            <%- include('../partials/planes_page_links');%>
            <div class="jumbotron">
                <h1 align="center">Add Airport</h1>
            </div>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <form action="/Aaddform" method="post">
                        <div class="form-group">
