<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body class="container">

    <header>
        <%- include('../partials/header'); %>
    </header>

    <main>
        <div class="container">
            <%- include('../partials/planes_page_links');%>
            <div class="jumbotron">
                <h1 align="center">Update</h1>
                <p align="center"> Select the airport you wish to update. </p>
            </div>
        <div class="container-fluid text-center">
            <div class="row align-items-start">
                <div class="col"
                style="border: 1px solid red">
                    Airport Code
                </div>
                <div class="col"
                style="border: 1px solid red">
                    Airport Name
                </div>
                <div class="col"
                style="border: 1px solid red">
                    Country
                </div>

            </div>
        <form action="/Aup_form" method="POST">

                <% if (locals.airports) {%>

                    <% locals.airports.forEach(function(data) {%>

                    <div class="row align-items-start" >
                        <div class="form-check" >
                            <input type="checkbox" id="id" value="<%=data.id%>" name="id"  >
                        </div>
                        <div class="col" style="border: 1px solid red">
                            <%= data.airportcode%>
                        </div>
                        <div class="col" style="border: 1px solid red">
                            <%= data.airportname%>
                        </div>
                        <div class="col" style="border: 1px solid red">
                            <%= data.country%>
                        </div>
                    </div>


                        <%})%>

                <%}%>

                    <div class="form-group">
                            <label for="airportcode" class="form-lable">Airport Code</label>
                            <input type="text" id="airportcode" name="airportcode" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="airportname" class="form-lable">Airport Name</label>
                            <input type="text" id="airportname" name="airportname" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="country" class="form-lable">Country</label>
                            <input type="text" id="country" name="country" class="form-control" required>
                        </div>

            <input type="submit" class="btn btn-info" value="Update">
        </form>
    </main>

    <footer>

    </footer>

</body>

</html>