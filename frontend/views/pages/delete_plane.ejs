<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body class="container">

    <header>
        <%- include('../partials/header'); %>
    </header>

    <main>
        <div class="container">
            <%- include('../partials/planes_page_links');%>
            <div class="jumbotron">
                <h1 align="center">Delete</h1>
                <p align="center"> Select the plane you wish to delete. </p>
                <p align="center"> Please choose only one. </p>
            </div>
        <div class="container-fluid text-center">
            <div class="row align-items-start">
                <div class="col"
                style="border: 1px solid red">
                    Make
                </div>
                <div class="col"
                style="border: 1px solid red">
                    Model
                </div>
                <div class="col"
                style="border: 1px solid red">
                    Year
                </div>
                <div class="col"
                style="border: 1px solid red">
                    Capacity
                </div>

            </div>
        <form action="/d_form" method="POST">

                <% if (locals.planes) {%>

                    <% locals.planes.forEach(function(data) {%>

                    <div class="row align-items-start" >
                        <div class="form-check" >
                            <input type="checkbox" id="id" value="<%=data.id%>" name="id"  >
                        </div>
                        <div class="col" style="border: 1px solid red">
                            <%= data.make%>
                        </div>
                        <div class="col" style="border: 1px solid red">
                            <%= data.model%>
                        </div>
                        <div class="col" style="border: 1px solid red">
                            <%= data.year%>
                        </div>
                        <div class="col" style="border: 1px solid red">
                            <%= data.capacity%>
                        </div>
                    </div>


                        <%})%>

                <%}%>
            <input type="submit" class="btn btn-info" value="Delete">
        </form>
    </main>

    <footer>

    </footer>

</body>

</html>