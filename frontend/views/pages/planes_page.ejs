<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body class="container">

    <header>
        <%- include('../partials/header'); %>
    </header>

    <main>
        <%- include('../partials/planes_page_links'); %>
        <div class="container">
            <div class="jumbotron">
                 <h1 align="center">View</h1>
            </div>
        </div>

        <div class="container-fluid text-center">
            <div class="row align-items-start">
                <div class="col"
                style="border: 1px solid red">
                    Make
                </div>
                <div class="col"
                style="border: 1px solid red">
                    Model
                </div>
                <div class="col"
                style="border: 1px solid red">
                    Year
                </div>
                <div class="col"
                style="border: 1px solid red">
                    Capacity
                </div>

            </div>
            <form action="/processdynamicform" method="post">

                <% if (locals.planes) {%>

                    <% locals.planes.forEach(function(data) {%>

                    <div class="row align-items-start" >
                        <div class="col" style="border: 1px solid red">
                            <%= data.make%>
                        </div>
                        <div class="col" style="border: 1px solid red">
                            <%= data.model%>
                        </div>
                        <div class="col" style="border: 1px solid red">
                            <%= data.year%>
                        </div>
                        <div class="col" style="border: 1px solid red">
                            <%= data.capacity%>
                        </div>
                    </div>


                        <%})%>

                <%}%>
            </form>


        </div>

    </main>

    <footer>

    </footer>

</body>

</html>